pipeline{
        agent any 
        stages {
               stage ('1. Install docker') {
                        steps {
                            sh 'sudo yum install docker -y'
                        }
               }      
               stage ('2. Start the docker service') {
                        steps {
                            sh 'sudo service docker start'
                        }
               }      
               stage ('3. Build the docker image') {
                        steps {
                     sh 'sudo docker build –t --build-arg image=${image} /home/ec2-user/'
                        }
               }      
               stage ('4. Run the container') {
                        steps {
                          sh 'sudo docker container run –dit --name $container $image'                        
                       }     
               } 
               }
}
